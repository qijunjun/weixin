/**index.wxss**/
swiper{
    width:100%;
    height:500rpx;
}
.container swiper image{
    width:100%;
    height:100%;
}
.movie_title{
    padding:40rpx 60rpx 10rpx;
}
.movie_title .big_title{
    font-size:46rpx;
    color:#000;
}
.movie_title .small_title{
    margin-top:30rpx;
}
.list_type{
    padding:0 40rpx 20rpx;
}
.list_type > view{
    height:120rpx;
    margin-top:26rpx;
    padding:0 30rpx;
    font-size:30rpx;
    color:#000;
    border-radius:10rpx;
    background:rgba(102,102,102,0.1);
    display:flex;
    align-items:center;
    justify-content:space-between;
}
.list_type > view image{
    width:30rpx;
    height:30rpx;
}