            <text class="board-item-title">正在热映</text>
            <image src="../../images/arrowright.png"></image>
        </view>
    </navigator>
    <navigator url="../list/list?type=coming_soon&&name=即将上映" hover-class="none">
        <view class="board-item">
             <text class="board-item-title">即将上映</text>
             <image src="../../images/arrowright.png"></image>
        </view>
    </navigator>
     <navigator url="../list/list?type=top250&&name=TP250" hover-class="none">
        <view class="board-item">
             <text class="board-item-title">TP250</text>
             <image src="../../images/arrowright.png"></image>
        </view>
     </navigator>
    <navigator url="../list/list?type=us-box&&name=北美票房榜" hover-class="none">
        <view class="board-item">
             <text class="board-item-title">北美票房榜</text>
